<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="flyingsquirrels.feedmetake2.Match">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/food_picture"
            android:src="@drawable/feedme"
            android:contentDescription=""
            android:layout_height="100dp"
            android:layout_width="400dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/x_button"
            android:src="@drawable/xbutton"
            android:contentDescription=""
            android:layout_height="100dp"
            android:layout_width="400dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/food_picture"
            android:paddingTop="20dp"
            android:paddingRight="10dp"/>
        <ImageView
            android:id="@+id/info_button"
            android:src="@drawable/infobutton"
            android:contentDescription=""
            android:layout_height="100dp"
            android:layout_width="400dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/x_button"
            android:paddingTop="10dp"
            android:layout_below="@id/food_picture"
            android:paddingLeft="10dp"/>
        <ImageView
            android:id="@+id/check_button"
            android:src="@drawable/check"
            android:contentDescription=""
            android:layout_height="100dp"
            android:layout_width="400dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/info_button"
            android:paddingTop="10dp"
            android:layout_below="@id/food_picture"
            android:paddingLeft="10dp"/>
    </RelativeLayout>

</RelativeLayout>
